<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<AnchorPane prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.home.todoapp.view.ListViewController">
   <children>
      <VBox prefHeight="500.0" prefWidth="450.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>

               <ButtonBar buttonMinWidth="30.0" maxWidth="-Infinity" minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="44.0" prefWidth="450.0" >
                  <buttons>
                     <MenuButton fx:id="otherBtn" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="button" stylesheets="@style.css">
                        <items>
                           <MenuItem fx:id="newMenuBtn" mnemonicParsing="false" onAction="#handleNewMenuBtn" text="New" />
                           <MenuItem fx:id="loadMenuBtn" mnemonicParsing="false" onAction="#handleOpenMenuBtn" text="Load..." />
                           <MenuItem fx:id="saveMenuBtn" mnemonicParsing="false" onAction="#handleSaveMenuBtn" text="Save" />
                           <MenuItem fx:id="saveAsMenuBtn" mnemonicParsing="false" onAction="#handleSaveAsMenuBtn" text="Save As..." />
                           <MenuItem fx:id="aboutMenuBtn" mnemonicParsing="false" onAction="#handleAboutMenuBtn" text="About" />
                           <MenuItem fx:id="exitMenuBtn" mnemonicParsing="false" onAction="#handleExitMenuBtn" text="Exit" />
                        </items>
                     </MenuButton>
                     <Region maxWidth="55.0" minWidth="30.0" prefHeight="44.0" prefWidth="30.0" />
                     <ToggleButton fx:id="noHurryBtn" maxWidth="90.0" minWidth="104.0" mnemonicParsing="false" onAction="#handleNoHurry" prefHeight="44.0" prefWidth="90.0" styleClass="button" stylesheets="@style.css" text="Eilt nicht">
                        <toggleGroup>
                           <ToggleGroup fx:id="ColorToggleGroup" />
                        </toggleGroup>
                     </ToggleButton>
                     <ToggleButton fx:id="openBtn" maxWidth="66.0" minWidth="78.0" mnemonicParsing="false" onAction="#handleOpen" prefHeight="44.0" prefWidth="78.0" styleClass="button" stylesheets="@style.css" text="Offen" toggleGroup="$ColorToggleGroup" />
                     <ToggleButton fx:id="hurryBtn" maxWidth="54.0" minWidth="55.0" mnemonicParsing="false" onAction="#handleHurry" prefHeight="44.0" prefWidth="55.0" styleClass="button" stylesheets="@style.css" text="Eilt" toggleGroup="$ColorToggleGroup" />
                     <ToggleButton fx:id="allBtn" maxWidth="58.0" minWidth="62.0" mnemonicParsing="false" onAction="#handleAll" prefHeight="44.0" prefWidth="62.0" styleClass="button" stylesheets="@style.css" text="Alle" toggleGroup="$ColorToggleGroup" />
                  </buttons>
               </ButtonBar>




            <ListView fx:id="listView" fixedCellSize="0.0" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="450.0" stylesheets="@style.css" />
            <ButtonBar buttonMinWidth="35.0" maxWidth="-Infinity" minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" prefWidth="450.0">
                  <buttons>
                     <ToggleButton fx:id="emailBtn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="35.0" styleClass="button" stylesheets="@style.css">
                        <graphic>
                           <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../resources/images/email3.png" />
                              </image>
                              <effect>
                                 <ColorAdjust brightness="0.5" />
                              </effect></ImageView>
                        </graphic>
                     </ToggleButton>
                  <Region layoutX="408.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                  <Region layoutX="397.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                  <Region layoutX="382.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
                     <ToggleButton fx:id="checkBtn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleDeleteTask" prefHeight="50.0" prefWidth="35.0" styleClass="button" stylesheets="@style.css">
                     <graphic>
                           <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../resources/images/check3.png" />
                              </image>
                              <effect>
                                 <ColorAdjust brightness="0.5" />
                              </effect>
                        </ImageView>
                     </graphic></ToggleButton>
                     <ToggleButton fx:id="editBtn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleEditTask" prefHeight="55.0" prefWidth="35.0" styleClass="button" stylesheets="@style.css">
                     <graphic>
                           <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../resources/images/edit3.png" />
                              </image>
                              <effect>
                                 <ColorAdjust brightness="0.6" />
                              </effect>
                        </ImageView>
                     </graphic></ToggleButton>
                     <ToggleButton fx:id="addBtn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleNewTask" prefHeight="50.0" prefWidth="35.0" styleClass="button" stylesheets="@style.css">
                     <graphic>
                           <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../resources/images/plus3.png" />
                              </image>
                              <effect>
                                 <ColorAdjust brightness="0.5" />
                              </effect>
                           </ImageView>
                     </graphic></ToggleButton>
                  </buttons>
               </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
